<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="imageButtonStyle">@style/AppTheme.imageButton</item>
        <item name="buttonStyle">@style/AppTheme.button</item>
        <item name="android:datePickerStyle">@style/customDateDialog</item>

    </style>

    <style name="whiteText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.imageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">36sp</item>
        <item name="android:fadingEdgeLength">300dp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="customDateDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


