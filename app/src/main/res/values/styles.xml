    <style name="whiteText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:drawableTint" tools:targetApi="m">@color/white</item>
    </style>

    <style name="AppTheme.buttonBorderlessColored" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.imageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:color">@color/white</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TextButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DividerBar">
        <item name="android:background">@drawable/gradient</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:orientation">horizontal</item>
    </style>



