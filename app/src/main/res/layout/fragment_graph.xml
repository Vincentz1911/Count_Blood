                <RadioButton
                    android:id="@+id/rb_month"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Month" />

                <RadioButton
                    android:id="@+id/rb_quarter"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Quarter" />

                <RadioButton
                    android:id="@+id/rb_year"
